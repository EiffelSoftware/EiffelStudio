<?xml version="1.0" encoding="utf-8"?>
<code_template format="1.0.0">
   <metadata>
      <title>Is null pointer</title>
      <description>Code template contract predicate to ensure an entity represents a null pointer</description>
      <author>Eiffel Software</author>
      <shortcut>is_null</shortcut>
      <categories>
         <category>Eiffel</category>
         <category>code</category>
         <category>contract</category>
		 <category>precondition</category>
		 <category>postcondition</category>
      </categories>
   </metadata>
   
   <declarations>
      <literal id="pointer" editable="True" conforms_to="POINTER">
         <description>A entity representing a pointer</description>
      </literal>
   </declarations>
   
   <templates>
      <template>${pointer}_is_null: ${pointer} = default_pointer${end}</template>
   </templates>
</code_template>