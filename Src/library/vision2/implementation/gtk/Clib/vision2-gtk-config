#! /bin/sh

usage()
{
	cat <<EOF
Usage: vision2-gtk-config [--devel][OPTIONS]
Options
	[--include_path]
	[--object]
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

ISE_LIBRARIES=$ISE_EIFFEL

while test $# -gt 0; do
	case $1 in
		--devel)
		ISE_LIBRARIES=$EIFFEL_SRC
		;;
		--object)
		echo $ISE_LIBRARIES/library/vision2/spec/$ISE_PLATFORM/lib/gtk_eiffel.o $ISE_LIBRARIES/library/vision2/spec/$ISE_PLATFORM/lib/load_pixmap.o `gtk-config --libs` -L/usr/X11R6/lib -lXtst $ISE_LIBRARIES/C_library/libpng/libpng.a $ISE_LIBRARIES/C_library/zlib/libz.a
		;;
    		--include_path)
		echo `gtk-config --cflags`
		;;
    		*)
      		usage 1 1>&2
      		;;
 	esac
  	shift
done


