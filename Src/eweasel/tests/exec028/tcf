-- This is a test control file

test_name 	big-bit-attribute
test_description A system with an attribute whose type is a BIT type with a large number of bits (2 million)

copy_sub 	Ace $TEST Ace
copy_raw 	test.e $CLUSTER test.e
compile_frozen

-- Test cannot complete as compiler reports VTBT for large constants in BIT type
compile_result	validity_error TEST VTBT
test_end

compile_result 	ok

c_compile_work
c_compile_result ok

execute_work 	NONE exec_output1 
execute_result	ok
compare		exec_output1 output1

test_end
