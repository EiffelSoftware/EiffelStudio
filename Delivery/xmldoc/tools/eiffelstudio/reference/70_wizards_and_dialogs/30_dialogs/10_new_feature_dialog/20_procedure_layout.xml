		<heading >
			<size >2</size>Example
		</heading>
		<div >
			<image >
				<url >/images/eiffelstudio/dialogs_and_wizards/feature-wizard-procedure-example.png</url>
			</image>
		</div>
		<code_block >
class
    PRODUCT

feature {PERSON} -- Element change

    place_order (person: PERSON; quantity: INTEGER) is
            -- Mail `quantity' to `person'.
        require
            person /= Void and quantity &amp;gt; 0
        do
            person.mail_order (Current, quantity)
        ensure
            person.has_ordered (Current)
        end

end -- class PRODUCT
		</code_block>
