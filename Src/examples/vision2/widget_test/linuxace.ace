system
	"vision2_tour"

root
	vision2_application: make_and_launch

default
	assertion (check)
	assertion (require)
	disabled_debug (yes)
	disabled_debug ("ev_gtk_c_object_dispose")
	disabled_debug ("ev_gtk_creation")
	disabled_debug ("ev_gtk_destroy")
	disabled_debug ("ev_gtk_dispose")
	debug (no)
	line_generation (no)
	profile (no)
	trace (no)
	check_vape (yes)
	console_application (no)
	syntax_warning (no)
	array_optimization (no)
	dead_code_removal (yes)
	exception_trace (yes)
	inlining (no)


cluster
	all root_cluster:		"."
		exclude
			"templates"; 
		end

	all base:		"$EIFFEL_SRC/library/base"
		exclude
			"table_eiffel3"; "desc"; 
		end

	all contrib: "$EIFFEL_SRC/library/vision2/contrib"
		exclude
			"mswin"
		end

	all vision2:		"$EIFFEL_SRC/library/vision2"
		exclude
			"contrib";"mswin"; "ev_pixmap.e"; "ev_pixmapable.e"; "ev_notebook.e"; "gtk2";
		end

external
	include_path:
			"\$(EIFFEL_SRC)/library/event/Clib",
			"\$(EIFFEL_SRC)/library/vision2/spec/include",
			"\$(EIFFEL_SRC)/library/vision2/implementation/gtk/Clib `$EIFFEL_SRC/library/vision2/implementation/gtk/Clib/vision2-gtk-config --include_path`"
	object:
			"`$(EIFFEL_SRC)/library/vision2/implementation/gtk/Clib/vision2-gtk-config --devel --object`"
end
