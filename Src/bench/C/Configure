d_fd_macros='$d_fd_macros'
d_fd_set='$d_fd_set'
d_fds_bits='$d_fds_bits'
d_ftime='$d_ftime'
d_gettimeod='$d_gettimeod'
d_getgrps='$d_getgrps'
d_gethid='$d_gethid'
aphostname='$aphostname'
d_gethname='$d_gethname'
d_phostname='$d_phostname'
d_uname='$d_uname'
