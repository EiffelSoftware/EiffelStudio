		call configure win32 m6 >>& %INSTALL_LOG
	else
		call configure win32 m >>& %INSTALL_LOG
	endiff
endiff
cd %EIFFEL_SRC
copy C\run-time\LIB\*.lib %STUDIO_DIR\studio\spec\%ISE_PLATFORM\lib\msc
iff not defined WIN64 then
	copy C\desc\ise_desc.dll %STUDIO_DIR\studio\spec\%ISE_PLATFORM\lib\msc
