		<code_block>class    PRODUCTfeature {PERSON} -- Element change    place_order (person: PERSON; quantity: INTEGER) is            -- Mail `quantity' to `person'.        require            person /= Void and quantity &amp;gt; 0        do            person.mail_order (Current, quantity)        ensure            person.has_ordered (Current)        endend -- class PRODUCT</code_block>
