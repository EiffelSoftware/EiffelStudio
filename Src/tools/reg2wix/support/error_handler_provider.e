note
	description: "[
		Provides decending classes with access to a {MULTI_ERROR_MANAGER} instance.
	]"
	legal: "See notice at end of class."
	status: "See notice at end of class.";
	date: "$date$";
	revision: "$revision$"

deferred class
	ERROR_HANDLER_PROVIDER

feature {NONE} -- Initialization

	make (a_handler: like error_handler)
			-- Initialize generator with error handler `a_handler'
		require
			a_handler_attached: a_handler /= Void
			a_handler_error_free: a_handler.successful
		do
			error_handler := a_handler
		ensure
			error_handler_set: error_handler = a_handler
		end

feature {NONE} -- Access

	error_handler: MULTI_ERROR_MANAGER
			-- Error manager to use to add errors and warnings to

invariant
	error_handler_attached: error_handler /= Void

