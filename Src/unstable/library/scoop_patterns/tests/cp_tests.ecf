<?xml version="1.0" encoding="ISO-8859-1"?>
<system xmlns="http://www.eiffel.com/developers/xml/configuration-1-13-0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.eiffel.com/developers/xml/configuration-1-13-0 http://www.eiffel.com/developers/xml/configuration-1-13-0.xsd" name="cp_tests" uuid="8102010C-20BD-41EE-BF7A-2DEBD3408AF4">
	<target name="cp_tests">
		<root class="EXAMPLES" feature="make"/>
