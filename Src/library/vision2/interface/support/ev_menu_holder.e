indexing
	description:
		"EiffelVision menu container. A common type for%
		% all the menu-container : ev_static_menu_bar,%
		% ev_popup_menu, ev_option_button, ev_menu_bar.";
	date: "$Date$";
	revision: "$Revision$"

class
	EV_MENU_CONTAINER

feature -- Element change

	add_menu (menu: EV_MENU) is
			-- Add a sub-menu in the container.
		do
			implementation.add_menu (menu)
		end

feature -- Implementation

	implementation: EV_MENU_CONTAINER_I

end -- class EV_MENU_CONTAINER

