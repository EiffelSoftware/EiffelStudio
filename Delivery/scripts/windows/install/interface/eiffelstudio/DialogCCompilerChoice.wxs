<?xml version="1.0"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <?ifdef EiffelStudio?>
    <UI Id="UI.dialog_choose_c_compiler">
      <RadioButtonGroup Property="SELECTEDCCOMPILER">
        <RadioButton Value="mingw" X="5" Y="5" Width="213" Height="14" Text="Install and use MinGW (GCC)" />
        <RadioButton Value="msc" X="5" Y="19" Width="213" Height="14" Text="Use a &amp;Microsoft C/C++ compiler (Recommended)"/>
      </RadioButtonGroup>

      <Dialog Id="DialogCCompilerChoice" Width="375" Height="220" Title="[ProductName]">
        <Control Id="Bitmap" Type="Bitmap" X="0" Y="0" Width="375" Height="220" TabSkip="no" Text="backdrop_c.bmp" />
        <Control Id="Title" Type="Text" X="56" Y="13" Width="310" Height="22" Transparent="yes" NoPrefix="yes">
          <Text>[BigFont]C/C++ Compiler Selection</Text>
        </Control>
        <Control Id="SubTitle" Type="Text" X="56" Y="35" Width="309" Height="13" Transparent="yes" NoPrefix="yes">
          <Text>[SubTitleFont]The Eiffel compiler requires a C/C++ compiler to generate executables</Text>
        </Control>
        <Control Id="Description1" Type="Text" X="11" Y="70" Width="355" Height="30" Transparent="yes" NoPrefix="yes">
          <Text>If you have the Microsoft Visual C++ compiler version 6.0, or above, or you have installed the latest Windows SDK then select "Use a Microsoft C/C++ compiler".</Text>
        </Control>
        <Control Id="Description2" Type="Text" Height="30" Width="354" X="12" Y="100" Text="Otherwise select &quot;Install and use MinGW (GCC)&quot;. This will install MinGW's C/C++ compiler and configure the Eiffel compiler to use it as the default C/C++ compiler." Transparent="yes" />
        <Control Id="Choice" Type="RadioButtonGroup" X="40" Y="135" Width="218" Height="36" Property="SELECTEDCCOMPILER" TabSkip="no">
          <Publish Event="DoAction" Value="EvaluateCCompiler" Order="1">1</Publish>
        </Control>
        <Control Id="Download" Type="PushButton" Height="17" Width="68" X="266" Y="156" Text="[Button_Download]">
          <Publish Event="DoAction" Value="ShowCCompilerHowTo">1</Publish>
          <Condition Action="disable"><![CDATA[SELECTEDCCOMPILER <> "msc"]]></Condition>
          <Condition Action="enable"><![CDATA[SELECTEDCCOMPILER = "msc" AND HASMSCCOMPILER <> "1"]]></Condition>
        </Control>
        <Control Id="Next" Type="PushButton" X="242" Y="193" Width="56" Height="17" Default="yes" Text="[Button_Next]">
          <Publish Event="NewDialog" Value="DialogMscRestartRequired" Order="2"><![CDATA[SELECTEDCCOMPILER = "msc" AND CANCCOMPILE = "0"]]></Publish>
          <Publish Event="NewDialog" Value="DialogPrecompileChoice" Order="2"><![CDATA[SELECTEDCCOMPILER <> "msc" OR CANCCOMPILE = "1"]]></Publish>
        </Control>
        <Control Id="Back" Type="PushButton" X="187" Y="193" Width="56" Height="17" Text="[Button_Back]">
          <Publish Event="NewDialog" Value="DialogSelectFolder">1</Publish>
        </Control>
        <Control Id="Cancel" Type="PushButton" X="309" Y="193" Width="56" Height="17" Cancel="yes" Text="[Button_Cancel]">
          <Publish Event="SpawnDialog" Value="PromptCancelInstall">1</Publish>
        </Control>
      </Dialog>
    </UI>
    <?endif?>
  </Fragment>
</Wix>
