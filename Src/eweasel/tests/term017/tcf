-- This is a test control file

test_name 	array-of-big-bit
test_description A class with a feature of type ARRAY [BIT n] where `n' is very large

copy_sub 	Ace $TEST Ace
define		LENGTH 250000000
copy_sub 	test.e $CLUSTER test.e
compile_frozen
compile_result 	validity_error TEST VTBT

define		LENGTH 32767
copy_sub 	test.e $CLUSTER test.e
resume_compile
compile_result 	ok

c_compile_work
c_compile_result ok

execute_work    NONE exec_output1
compare		exec_output1 output

test_end

