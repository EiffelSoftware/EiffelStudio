<?xml version="1.0"?>

<project name="packages">

	<description>
		description: "Gobo Eiffel packages"
		copyright: "Copyright (c) 2016, Eric Bezault and others"
		license: "MIT License"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<inherit>
		<parent location="package.eant">
			<redefine target="test"/>
			<redefine target="test_all"/>
			<redefine target="test_in_subfolder"/>
		</parent>
	</inherit>

	<target name="test" depend="init">
		<description>
			Run all tests.
			Use Eiffel compiler set in ${GOBO_EIFFEL}
			or 'ge' if this variable is not defined.
			Compile in debug mode if ${debug} is defined.
			Remove intermediary generated files after running tests.
		</description>

		<set name="debug_suffix" value=""/>
		<set name="debug_suffix" value="_debug" if="${debug}"/>
		<set name="eiffel_suffix" value=""/>
		<set name="eiffel_suffix" value="_${eiffel}" if="${eiffel}"/>
		<geant target="do_all" arguments="test${debug_suffix}${eiffel_suffix},*" dir="${current.absdir}"/>
	</target>

	<target name="test_all" depend="init">
		<description>
			Run all tests.
			Use Eiffel compiler set in ${GOBO_EIFFEL}
			or 'ge' if this variable is not defined.
			Compile in debug mode if ${debug} is defined.
			Remove intermediary generated files after running tests.
		</description>

		<set name="debug_suffix" value=""/>
		<set name="debug_suffix" value="_debug" if="${debug}"/>
		<set name="eiffel_suffix" value=""/>
		<set name="eiffel_suffix" value="_${eiffel}" if="${eiffel}"/>
		<geant target="do_all" arguments="test_all${debug_suffix}${eiffel_suffix},*" dir="${current.absdir}"/>
	</target>

<!-- Implementation -->

	<target name="test_in_subfolder" depend="init" export="NONE">
		<description>
			Run all tests in `subfolder' (first argument) of the 'test' folder of each package.
			Use Eiffel compiler set in ${GOBO_EIFFEL}
			or 'ge' if this variable is not defined.
			Compile in debug mode if ${debug} is defined.
			Remove intermediary generated files after running tests.
		</description>
		<argument name="subfolder"/>

		<set name="debug_suffix" value=""/>
		<set name="debug_suffix" value="_debug" if="${debug}"/>
		<set name="eiffel_suffix" value=""/>
		<set name="eiffel_suffix" value="_${eiffel}" if="${eiffel}"/>
		<geant target="do_all" arguments="test_${subfolder}${debug_suffix}${eiffel_suffix},*" dir="${current.absdir}"/>
		
		<geant target="do_in_subfolder" arguments="test${subfolder}${debug_suffix}${eiffel_suffix},test" dir="${current.absdir}"/>
	</target>
	
</project>
