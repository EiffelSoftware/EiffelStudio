cc='$cc'
gccversion='$gccversion'
ccflags='$ccflags'
cppflags='$cppflags'
ldflags='$ldflags'
lkflags='$lkflags'
optimize='$optimize'
cf_by='$cf_by'
cf_time='$cf_time'
charsize='$charsize'
contains='$contains'
cpp_stuff='$cpp_stuff'
cpplast='$cpplast'
cppminus='$cppminus'
cpprun='$cpprun'
cppstdin='$cppstdin'
d_gettblsz='$d_gettblsz'
nofile='$nofile'
tablesize='$tablesize'
d_access='$d_access'
d_bcmp='$d_bcmp'
d_bcopy='$d_bcopy'
