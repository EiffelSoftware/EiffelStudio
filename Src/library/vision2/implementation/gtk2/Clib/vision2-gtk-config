#! /bin/sh

usage()
{
	cat <<EOF
Usage: vision2-gtk-config [OPTIONS]
Options
	[--include_path]
	[--object]
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

ISE_LIBRARIES=$ISE_EIFFEL

while test $# -gt 0; do
	case $1 in
		--devel)
		ISE_LIBRARIES=$EIFFEL_SRC
		;;
		--object)
		echo $ISE_LIBRARIES/library/vision2/spec/$ISE_PLATFORM/lib/gtk_eiffel.o `pkg-config gtk+-2.0 --libs` -L/usr/X11R6/lib -lX11 -lXtst
		;;
    		--include_path)
		echo `pkg-config gtk+-2.0 --cflags`
		;;
    		*)
      		usage 1 1>&2
      		;;
 	esac
  	shift
done


