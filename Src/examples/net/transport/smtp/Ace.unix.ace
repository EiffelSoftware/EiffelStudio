system
	smtp_client

root
	SMTP_CLIENT (root_cluster): "make"

default
	precompiled ("$ISE_LIBRARY/precomp/spec/$ISE_PLATFORM/base")

cluster
	root_cluster: 	"$ISE_LIBRARY/examples/net/transport/smtp"

		-- EiffelNet
	all net:				"$ISE_LIBRARY/library/net"

		-- EiffelBase
	all base:			"$ISE_LIBRARY/library/base"
		exclude
			"desc";"table_eiffel3"
		end

external
		-- External EiffelNet library 
	object:
		"$(ISE_LIBRARY)/library/net/spec/$(ISE_PLATFORM)/lib/libnet.a"

end
