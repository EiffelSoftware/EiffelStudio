	all system_accessibility:       "$EIFFEL_SRC\library.net\accessibility"
	all system_data:                "$EIFFEL_SRC\library.net\data\system\data"
	
	dictionaries:                   "..\dictionaries"
		exclude
			"CVS";
		end
		
	gac_browser:                    "..\gac_browser"
		exclude
			"CVS";
		end
	folder_dialog:                  "..\folder_dialog"
		exclude
