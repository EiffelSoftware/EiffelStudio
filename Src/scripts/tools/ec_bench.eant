<?xml version="1.0"?>

<project name="PROJECT_ec_bench" default="help">
	<description>
		description: "ec bench compilation"
	</description>
	<inherit>
		<parent location="${PROJECT_ec_bench.dir}${path_separator}_inc${path_separator}_eiffel_tools_compilation.eant">
			<redefine target="init"/>
			<redefine target="before"/>
		</parent>
	</inherit>

	<target name="init" >
		<precursor/>
		<geant target="set_ECF" arguments="${EIFFEL_SRC}${path_separator}Eiffel${path_separator}Ace${path_separator}ec.ecf" />
		<geant target="set_TARGET" arguments="bench" />
		<geant target="set_NAME" arguments="ec" />
	</target>

	<target name="before" if="$is_windows">
		<precursor/>
		<set name="_ecf_dir" value="${EIFFEL_SRC}${path_separator}Eiffel${path_separator}Ace" />
		<copy dir="$_ecf_dir" file="ec.rc" to_directory="$_COMP_DIR" />
		<copy dir="$_ecf_dir" file="ec.ico" to_directory="$_COMP_DIR" />
		<copy dir="$_ecf_dir" file="ec.exe.manifest" to_directory="$_COMP_DIR" />
		<unset name="_ecf_dir" />
	</target>

</project>
