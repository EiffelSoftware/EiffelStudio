-- This is a test control file

test_name 	inspect-high-bit-char
test_description An when clause of an inspect instruction does not work correctly if the constant is of type CHARACTER and is > '%/127/.


copy_sub 	Ace $TEST Ace
copy_raw 	test.e $CLUSTER test.e
compile_melted
compile_result 	ok

execute_work 	NONE exec_output1
execute_result 	ok
compare		exec_output1 output

compile_frozen
compile_result 	ok

c_compile_work
c_compile_result ok

execute_work 	NONE exec_output2
execute_result 	ok
compare		exec_output2 output

test_end
