-- This is a test control file

test_name 	 add-remove-expanded-mark-generic-class
test_description After initial compilation, a generic lcass is changed so that it is also expanded.  When the compiler reports VDRD(6) and VDRD(2) errors, the expanded mark is removed and compilation resumed.  The compiler then crashes with a call on Void target in {GEN_TYPE_A}.static_type_id.


define		EXPANDED ""
copy_sub 	Ace $TEST Ace
copy_raw 	test.e $CLUSTER test.e
copy_sub 	test1.e $CLUSTER test1.e
copy_raw 	test2.e $CLUSTER test2.e
compile_melted
compile_result 	ok

define		EXPANDED "expanded"
copy_sub 	test1.e $CLUSTER test1.e
compile_melted
compile_result 	validity_error TEST VDRD(6) VDRD(2)

define		EXPANDED ""
copy_sub 	test1.e $CLUSTER test1.e
resume_compile
compile_result 	ok

execute_work 	NONE 	exec_output1
execute_result 	ok
compare		exec_output1 output

test_end
