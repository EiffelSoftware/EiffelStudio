malloctype='$malloctype'
usemymalloc='$usemymalloc'
installmansrc='$installmansrc'
manext='$manext'
mansrc='$mansrc'
mansrcexp='$mansrcexp'
mkdep='$mkdep'
huge='$huge'
large='$large'
