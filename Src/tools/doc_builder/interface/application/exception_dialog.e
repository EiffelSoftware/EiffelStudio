	set_summary (a_type: STRING) is
			-- Set summary
		require
			type_not_void: a_type /= Void
			type_not_empty: not a_type.is_empty
		do
			summary_label.set_text (a_type)
		end		

	set_exception_type (a_type: STRING) is
			-- Set type
		require
			type_not_void: a_type /= Void
			type_not_empty: not a_type.is_empty
		do
			a_type.replace_substring_all ("%R", "")
			excpt_type_label.set_text (a_type)
		end		
		
	set_exception_trace (a_trace: STRING) is
			-- Set trace
		require
			trace_not_void: a_trace /= Void
			trace_not_empty: not a_trace.is_empty
		do
			a_trace.replace_substring_all ("%R", "")
			excpt_trace_text.set_text (a_trace)
		end		

