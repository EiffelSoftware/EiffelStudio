-- This is a test control file

test_name 	finalize-all-classes-true
test_description Finalizing a system when the configuration file specifies all_classes="true" causes the compiler to crash, whether dead code removal is enabled or not

define		DEAD_CODE_REMOVAL "true"
copy_sub 	Ace $TEST Ace
copy_raw 	test.e $CLUSTER test.e
compile_final
compile_result 	ok

c_compile_final
c_compile_result ok

cleanup_compile

define		DEAD_CODE_REMOVAL "false"
copy_sub 	Ace $TEST Ace
compile_final
compile_result 	ok

c_compile_final
c_compile_result ok

test_end
