#!/bin/sh

usage()
{
	cat <<EOF
Usage: dl-config [OPTIONS]
Options
	[--include_path]
	[--library]
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

#Check if ISE_LIBRARY is defined, if not we use ISE_EIFFEL.
if [ -z "$ISE_LIBRARY" ]; then
	ISE_LIBRARY=$ISE_EIFFEL
fi

while test $# -gt 0; do
	case $1 in
		--library)
		if echo "$ISE_PLATFORM" | grep "linux" >/dev/null 2>&1; then
			echo -ldl
 		fi
		;;
		--include_path)
		;;
		*)
		usage 1 1>&2
		;;
 	esac
	shift
done

