		end
	modifications:                  "..\modifications_interface"
		exclude
			"CVS";
		end
	support:                        "..\support"
		exclude
			"CVS";
		end
	all generated:                  "..\..\generated"
		exclude
			"CVS";"reflection_generated";
		end
		
	all reflection:                 "..\..\New.ISE.Reflection.Emitter"
		exclude
			"CVS";"ace_file";
		end
		
