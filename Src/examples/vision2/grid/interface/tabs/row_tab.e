			from
				row_counter := 1
			until
				row_counter > grid.row_count or second_selected > 0
			loop
				if grid.row (row_counter).is_selected then
					if first_selected = 0 then
						first_selected := row_counter
					else
						second_selected := row_counter
					end
				end
