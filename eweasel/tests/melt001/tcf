-- This is a test control file

test_name 	divide-melt-panic
test_description The integer division `40 / 5' in melted feature

copy_sub 	Ace $TEST Ace
define		BODY "io.putint (40 / 5); io.new_line"
copy_sub 	test.e $CLUSTER test.e
compile_melted
compile_result 	validity_error TEST VUAR(2)

define		BODY "io.putreal (40 / 5); io.new_line"
copy_sub 	test.e $CLUSTER test.e
resume_compile
compile_result 	ok

execute_work NONE 	exec_output1
execute_result 	ok
compare		exec_output1 output1

compile_frozen
compile_result 	ok

c_compile_work
c_compile_result ok

execute_work 	NONE exec_output1
execute_result 	ok
compare		exec_output1 output1

test_end
