<?xml version="1.0"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <UI Id="UI.dialog_missing_msc_warning">
      <Dialog Id="DialogMissingMscWarning" Width="375" Height="220" Title="[ProductName]">
        <Control Id="Bitmap" Type="Bitmap" X="0" Y="0" Width="375" Height="220" TabSkip="no" Text="backdrop_warn.bmp" />
        <Control Id="Title" Type="Text" X="56" Y="13" Width="309" Height="57" Transparent="yes" NoPrefix="yes">
          <Text>[BigFont]Missing Microsoft C/C++ Compiler</Text>
        </Control>
        <Control Id="SubTitle" Type="Text" Height="13" Width="302" X="56" Y="35" Transparent="yes" NoPrefix="yes">
          <Text>[SubTitleFont]The installer has detected missing software</Text>
        </Control>
        <Control Id="Description" Type="Text" X="9" Y="73" Width="356" Height="32" Transparent="yes">
          <Text>[ProductName] requires a C/C++ compiler in order to completely compile Eiffel/Eiffel for .NET projects. No Microsoft C/C++ was found but you may continue with an installation of a free C/C++ compiler.</Text>
        </Control>
        <Control Id="Reason" Type="Text" Height="62" Width="328" X="26" Y="111" Transparent="yes" NoPrefix="yes">
          <Text>[TitleFont][C_CONFIG_ERROR_TEXT]</Text>
        </Control>
        <Control Id="View" Type="PushButton" X="26" Y="157" Width="100" Height="17" Text="[Button_ViewFullWarning]" Hidden="yes">
          <Publish Event="DoAction" Value="ShowCConfigurationWarning">1</Publish>
          <Condition Action="show"><![CDATA[IS_VIEW_FULL_ERROR_BUTTON_SHOWN = "1"]]></Condition>
        </Control>
        <Control Id="Back" Type="PushButton" X="187" Y="193" Width="56" Height="17" Text="[Button_Back]">
          <Publish Event="NewDialog" Value="DialogMissingNetFx"><![CDATA[IS_DOTNET_INSTALLED <> "1"]]></Publish>
          <Publish Event="NewDialog" Value="DialogSelectLanguage"><![CDATA[IS_DOTNET_INSTALLED = "1"]]></Publish>
        </Control>
        <Control Id="Next" Type="PushButton" X="242" Y="193" Width="56" Height="17" Default="yes" Text="[Button_Next]">
          <Publish Event="NewDialog" Value="DialogSelectCCompiler"><![CDATA[C_CONFIG_CHOOSE = "1"]]></Publish>
          <Publish Event="NewDialog" Value="DialogPrecompileChoice"><![CDATA[C_CONFIG_CHOOSE <> "1"]]></Publish>
        </Control>
        <Control Id="Cancel" Type="PushButton" X="309" Y="193" Width="56" Height="17" Cancel="yes" Text="[Button_Cancel]">
          <Publish Event="SpawnDialog" Value="PromptCancelInstall">1</Publish>
        </Control>
      </Dialog>
    </UI>
  </Fragment>
</Wix>
  