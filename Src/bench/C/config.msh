#--------
#ccflags='-DEIF_MAKE_DLL $warning_level -nologo $debug'
#mtccflags='-DEIF_MAKE_DLL $warning_level -nologo $debug -MT -DEIF_THREADS'
#output_libraries='dll mtdll'
#
#
#Link Lines in non debug mode:
#-----------------------------
link_line='$compiler_path\bin\lib -OUT:$@ $(OBJECTS) $link_debug'
link_wline='$compiler_path\bin\lib -OUT:$@ $(WOBJECTS) $link_debug'
link_eline='$compiler_path\bin\lib -OUT:$@ $(EOBJECTS) $link_debug'
link_mtline='$compiler_path\bin\lib -OUT:$@ $(MT_OBJECTS) $link_debug'
link_mtwline='$compiler_path\bin\lib -OUT:$@ $(MT_WOBJECTS) $link_debug'
#
#
optimize='-O2 -Ogityb2 -Gs'
debug=''
link_debug=''
#optimize=''
#debug='-Zi'
#link_debug='-DEBUGTYPE:BOTH'
warning_level='-W3'
dllflags='-nologo -subsystem:WINDOWS -dll -incremental:no'
