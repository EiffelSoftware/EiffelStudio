i_time='$i_time'
timeincl='$timeincl'
i_tmvlsyss='$i_tmvlsyss'
i_utime='$i_utime'
i_stdarg='$i_stdarg'
i_varargs='$i_varargs'
i_varhdr='$i_varhdr'
i_xm_protocols='$i_xm_protocols'
install='$install'
installdir='$installdir'
intsize='$intsize'
lex='$lex'
lexflags='$lexflags'
libc='$libc'
