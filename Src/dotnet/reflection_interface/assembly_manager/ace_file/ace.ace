	all dot_net_base:               "$EIFFEL_SRC\library.net\base"
	all base:                       "$EIFFEL_SRC\library\base"
		exclude
			"CVS"; "classic"; "table_eiffel3"; 
		end

	all system_system:              "$EIFFEL_SRC\library.net\system\system"
	all system_xml:                 "$EIFFEL_SRC\library.net\xml\System\xml"
	all system_winforms:            "$EIFFEL_SRC\library.net\winforms\system\windows\forms"
