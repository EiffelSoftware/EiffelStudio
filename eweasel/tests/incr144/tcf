-- This is a test control file

test_name 	 vtcg-remove-creation-feat
test_description After initial compilation, a creation feature named in a generic constraint is removed entirely from the class.  When the system is recompiled, the VTCG (VTGD) validity error is not detected.

copy_sub 	 Ace $TEST Ace
define		 CLASS_BODY "creation foobar feature foobar is do end"
copy_raw 	 test.e  $CLUSTER test.e
copy_raw 	 test1.e  $CLUSTER test1.e
copy_sub 	 test2.e  $CLUSTER test2.e
compile_melted
compile_result 	 ok

define		 CLASS_BODY ""
copy_sub 	 test2.e  $CLUSTER test2.e
compile_melted
compile_result 	 validity_error TEST VTCG \n -- VTGD(2)(2)

test_end
