<?xml version="1.0"?>

<project name="PROJECT_copyright_tool" default="help">
	<description>
		description: "copyright_tool compilation"
	</description>

	<inherit>
		<parent location="${PROJECT_copyright_tool.dir}${path_separator}_inc${path_separator}_eiffel_tools_compilation.eant">
			<redefine target="init"/>
			<redefine target="before"/>
		</parent>
	</inherit>

	<target name="init" >
		<precursor/>
		<geant target="set_ECF" 
			arguments="${EIFFEL_SRC}${path_separator}tools${path_separator}copyright_tool${path_separator}eiffel_copyright.ecf" />
		<geant target="set_TARGET" 	arguments="eiffel_copyright" />
		<geant target="set_NAME" 	arguments="eiffel_copyright" />
	</target>

	<target name="before" if="$is_windows">
		<precursor/>
		<set name="_ecf_dir" value="${EIFFEL_SRC}${path_separator}tools${path_separator}copyright_tool" />
		<copy dir="$_ecf_dir" file="eiffel_copyright.rc" to_directory="$_COMP_DIR" />
		<copy dir="$_ecf_dir" file="eiffel_icon.png" to_directory="$_COMP_DIR" />
		<copy dir="$_ecf_dir" file="eiffel_copyright.exe.manifest" to_directory="$_COMP_DIR" />
		<unset name="_ecf_dir" />
	</target>

</project>
