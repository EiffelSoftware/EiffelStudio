<?xml version="1.0"?>

<project name="PROJECT_ec_batch" default="help">
	<description>
		description: "ec batch compilation"
	</description>
	<inherit>
		<parent location="${PROJECT_ec_batch.absdir}/_inc/_eiffel_tools_compilation.eant">
			<redefine target="init"/>
			<redefine target="before"/>
		</parent>
	</inherit>

	<target name="init" >
		<precursor/>
		<geant target="set_ECF" arguments="${EIFFEL_SRC}${path_separator}Eiffel${path_separator}Ace${path_separator}ec.ecf" />
		<geant target="set_TARGET" arguments="batch" />
		<geant target="set_NAME" arguments="ecb" />
	</target>

	<target name="before" if="$is_windows">
		<copy dir="${EIFFEL_SRC}${path_separator}Eiffel${path_separator}Ace" file="ec.rc" to_directory="$_COMP_DIR" />
		<copy dir="${EIFFEL_SRC}${path_separator}Eiffel${path_separator}Ace" file="ec.ico" to_directory="$_COMP_DIR" />
		<copy dir="${EIFFEL_SRC}${path_separator}Eiffel${path_separator}Ace" file="ec.exe.manifest" to_directory="$_COMP_DIR" />
	</target>

</project>
