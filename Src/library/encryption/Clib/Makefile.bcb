# wel.lib - Makefile for Microsoft C

CC = $(ISE_EIFFEL)\BCC55\bin\bcc32
AR = $(ISE_EIFFEL)\BCC55\bin\tlib
CFLAGS = -q -w-8064 -w-8065 -w-8057 -c -O2 -I. -I$(ISE_EIFFEL)\BCC55\include -I$(ISE_EIFFEL)\studio\spec\$(ISE_PLATFORM)\include
MTCFLAGS = -w-8057 -w-8064 -w-8065 -c -O2 -tWM -DEIF_THREADS -I. -I$(ISE_EIFFEL)\BCC55\include -I$(ISE_EIFFEL)\studio\spec\$(ISE_PLATFORM)\include

.c.obj:
	$(CC) @&&|
	$(CFLAGS) $<
|

OBJECTS = des.obj desop.obj
MT_OBJECTS = MTdes.obj MTdesop.obj

all:: des.lib mtdes.lib

des.lib: $(OBJECTS)
	if exist $@ del $@
	$(AR) $@ +des.obj
	$(AR) $@ +desop.obj
	if not exist ..\spec mkdir ..\spec
	if not exist ..\spec\bcb\$(ISE_PLATFORM) mkdir ..\spec\bcb\$(ISE_PLATFORM)
	if not exist ..\spec\bcb\$(ISE_PLATFORM)\lib mkdir ..\spec\bcb\$(ISE_PLATFORM)\lib
	copy $@ ..\spec\bcb\$(ISE_PLATFORM)\lib
	del $@
	del *.obj

mtdes.lib: $(MT_OBJECTS)
	if exist $@ del $@
	$(AR) $@ +MTdes.obj
	$(AR) $@ +MTdesop.obj
	if not exist ..\spec mkdir ..\spec
	if not exist ..\spec\bcb\$(ISE_PLATFORM) mkdir ..\spec\bcb\$(ISE_PLATFORM)
	if not exist ..\spec\bcb\$(ISE_PLATFORM)\lib mkdir ..\spec\bcb\$(ISE_PLATFORM)\lib
	copy $@ ..\spec\bcb\$(ISE_PLATFORM)\lib
	del $@
	del *.obj

MTdes.obj: des.c
	$(CC) $(MTCFLAGS) des.c

MTdesop.obj: desop.c
	$(CC) $(MTCFLAGS) desop.c
