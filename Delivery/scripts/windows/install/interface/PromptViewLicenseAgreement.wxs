<?xml version="1.0"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?include ..\includes\Preprocessors.wxi?>
  
  <Fragment>  
    <UI Id="UI.prompt_view_license">
      <Dialog Id="PromptViewLicenseAgreement" Width="406" Height="368" Title="[ProductName] EULA" NoMinimize="yes">
        <Control Id="Icon" Type="Icon" X="9" Y="13" Width="38" Height="38" FixedSize="yes" IconSize="48" Text="icon.ico" />
        <Control Id="Title" Type="Text" X="56" Y="13" Width="268" Height="22" Transparent="yes" NoPrefix="yes">
          <Text>[BigFont]End-User License Agreement</Text>
        </Control>
        <Control Id="SubTitle" Type="Text" Height="13" Width="268" X="56" Y="35" Transparent="yes" NoPrefix="yes">
          <Text>[SubTitleFont]Please read the following license agreement carefully!</Text>
        </Control>
        <Control Id="Ok" Type="PushButton" Height="17" Width="56" X="340" Y="342" Text="[Button_OK]" Default="yes" Cancel="yes">
          <Publish Event="EndDialog" Value="Return">1</Publish>
        </Control>
        <Control Id="AgreementText" Type="ScrollableText" X="9" Y="58" Width="388" Height="280" Sunken="yes" TabSkip="no" >
          <Text SourceFile="licenses\$(var.Product)\$(var.LicenseFile)"></Text>
        </Control>
      </Dialog>
    </UI>
  </Fragment>
</Wix>
