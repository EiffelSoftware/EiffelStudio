<?xml version="1.0" encoding="ISO-8859-1"?>
<system xmlns="http://www.eiffel.com/developers/xml/configuration-1-4-0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.eiffel.com/developers/xml/configuration-1-4-0 http://www.eiffel.com/developers/xml/configuration-1-4-0.xsd" name="patterns-tests" uuid="5C2D2C7D-6D3E-4812-8A56-78AF97C5AF25" library_target="patterns-tests">
	<target name="patterns-tests">
		<root class="BRIDGE_TEST"/>
		<file_rule>
			<exclude>/\.svn$</exclude>
		</file_rule>
		<file_rule>
			<exclude>unix</exclude>
			<condition>
				<platform value="windows"/>
			</condition>
		</file_rule>
		<file_rule>
			<exclude>window</exclude>
			<condition>
				<platform excluded_value="windows"/>
			</condition>
		</file_rule>
		<option warning="true" syntax_level="1">
			<assertions precondition="true" postcondition="true" check="true" invariant="true"/>
		</option>
		<library name="base" location="$ISE_LIBRARY\library\base\base.ecf"/>
		<library name="patterns" location="$EIFFEL_SRC\framework\patterns\patterns.ecf" readonly="false"/>
		<library name="testing" location="$ISE_LIBRARY\library\testing\testing.ecf"/>
		<tests name="bridge-tests" location=".\bridge\tests\" recursive="true"/>
		<tests name="concealer-test" location=".\concealer\tests\" recursive="true"/>
		<tests name="disposable-tests" location=".\disposable\tests\" recursive="true"/>
		<tests name="event-test" location=".\event\tests\" recursive="true"/>
		<tests name="lockable-test" location=".\lockable\tests\" recursive="true"/>
		<tests name="site-tests" location=".\site\tests\" recursive="true"/>
	</target>
</system>
