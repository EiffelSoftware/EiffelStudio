			<fileset include="@(lib*.*)" />
		</copy>
		<geant target="copy_file" arguments="${EIFFEL_SRC}/C,${_TARGET_DELIV_DIR}/studio/spec/${ISE_PLATFORM}/include,config.sh" />

		<geant target="copy_full_tree" arguments="studio/config/unix,${_TARGET_DELIV_DIR}/studio/config/${ISE_PLATFORM}" />
