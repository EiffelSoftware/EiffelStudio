WIDGET     : Separator
DESCRIPTION: Simple vertical or horizontal line to be used as 
             a separator. 

CLIENT INTERFACE:
-----------------

class interface
	SEPARATOR

creation 
	make,
	make_unmanaged

feature  -- Color

	foreground_color: COLOR
			-- Foreground color of Current widget
			-- (from PRIMITIVE)
		require -- from PRIMITIVE
			exists: not destroyed
		ensure -- from PRIMITIVE
			valid_result: Result /= void
		
	set_foreground_color (new_color: COLOR)
			-- Set foreground color to new_color.
			-- (from PRIMITIVE)
		require -- from PRIMITIVE
			exists: not destroyed;
			valid_color: new_color /= void
		ensure -- from PRIMITIVE
			foreground_set: foreground_color = new_color
		
feature  -- Line type

	set_double_dashed_line
			-- Set separator display to be double dashed line.
		require
			exists: not destroyed
		
	set_double_line
			-- Set separator display to be double line.
		require
			exists: not destroyed
		
	set_no_line
			-- Make separator invisible.
		require
			exists: not destroyed
		
	set_single_dashed_line
			-- Set separator display to be single dashed line.
		require
			exists: not destroyed
		
	set_single_line
			-- Set separator display to be single line.
		require
			exists: not destroyed
		
feature  -- Orientation

	is_horizontal: BOOLEAN
			-- Is separator oriented horizontal?
		require
			exists: not destroyed
		
	set_horizontal (flag: BOOLEAN)
			-- Set orientation of the scale to horizontal if flag,
			-- to vertical otherwise.
		require
			exists: not destroyed
		ensure
			value_correctly_set: is_horizontal = flag
		
feature  -- Widget hierarchy

	parent: COMPOSITE
			-- Parent of Current widget
			-- (from PRIMITIVE)
		require -- from STACKABLE
			exists: not destroyed
		
invariant
	-- from PRIMITIVE
	has_parent: not destroyed implies parent /= void;
	
end -- class SEPARATOR
