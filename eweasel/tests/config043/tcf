test_name 	 capability-target-use
test_description Capabilities should be checked against settings: a target cannot extend a target with less capabilities that do not support specified settings. See also test#config041.

copy_raw	test.e $CLUSTER test.e

-- Parent void safety: conformance
define	LIBRARY_VOID_SAFETY conformance

define	USE_VOID_SAFETY none
copy_sub	Ace $TEST Ace

compile_melted
compile_result	validity_error NONE VD46

define	USE_VOID_SAFETY initialization
copy_sub	Ace $TEST Ace

resume_compile
compile_result	validity_error NONE VD00

define	USE_VOID_SAFETY transitional
copy_sub	Ace $TEST Ace

resume_compile
compile_result	validity_error NONE VD00

define	USE_VOID_SAFETY all
copy_sub	Ace $TEST Ace

resume_compile
compile_result	validity_error NONE VD00

-- Parent void safety: all
define	LIBRARY_VOID_SAFETY all

define	USE_VOID_SAFETY conformance
copy_sub	Ace $TEST Ace

resume_compile
compile_result	ok

define	USE_VOID_SAFETY initialization
copy_sub	Ace $TEST Ace

compile_melted
compile_result	ok

define	USE_VOID_SAFETY transitional
copy_sub	Ace $TEST Ace

compile_melted
compile_result	ok

define	USE_VOID_SAFETY all
copy_sub	Ace $TEST Ace

compile_melted
compile_result	ok

test_end
