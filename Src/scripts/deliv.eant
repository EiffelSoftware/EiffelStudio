		<geant target="copy_exec_file" 	arguments="${EIFFEL_SRC}/C/shell/bin,${_TARGET_DELIV_DIR}/studio/spec/${ISE_PLATFORM}/bin,sed${exe}" />
		<geant target="copy_file" 	arguments="${EIFFEL_SRC}/C/shell/bin,${_TARGET_DELIV_DIR}/studio/spec/${ISE_PLATFORM}/bin,msys-1.0.dll" />
		<mkdir directory="${_TARGET_DELIV_DIR}/studio/spec/${ISE_PLATFORM}/etc"  />
