system our_server

root
	our_server (ROOT_CLUSTER): "make"

default
	precompiled ("$ISE_LIBRARY/precomp/spec/$ISE_PLATFORM/base")

cluster
	ROOT_CLUSTER: 	"$ISE_LIBRARY/examples/net/predef/server";
	common_classes:	"$ISE_LIBRARY/examples/net/predef/common";

	-- EiffelNet
	net:				"$ISE_LIBRARY/library/net";
	abstract_socket (net):		"$/abstract/socket";
	net_socket (net):		"$/network/socket";
	local_socket (net):		"$/local/socket";

	polling_abstract (net):		"$/polling/abstract";
	polling_implementation (net):	"$/polling/implementation";

	abstract_client_server (net):	"$/abstract/client_server";
	net_client_server (net):	"$/network/client_server";
	local_client_server (net):	"$/local/client_server";

	-- EiffelBase
	all base:			"$ISE_LIBRARY/library/base"
		exclude
			"desc";"table_eiffel3"
		end

external
	-- External EiffelNet library 
	object:
		"$(ISE_LIBRARY)/library/net/spec/$(ISE_PLATFORM)/lib/libnet.a"
--mswin		"$(ISE_LIBRARY)/library/net/spec/$(ISE_C_COMPILER)/lib/net.lib"
end
