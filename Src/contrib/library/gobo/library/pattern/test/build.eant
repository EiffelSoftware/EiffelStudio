<?xml version="1.0"?>

<project name="pattern_unit_test" default="help" >

	<description>
		system: "Gobo Eiffel Pattern Library Unit Tester"
		copyright: "Copyright (c) 2002-2016, Berend de Boer and others"
		license: "MIT License"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<inherit>
		<parent location="${GOBO}/library/common/config/test.eant">
			<redefine target="init_system"/>
		</parent>
	</inherit>


<!-- Implementation -->

	<target name="init_system" export="NONE">
		<set name="system" value="xpattern"/>
		<set name="library" value="pattern"/>
		<set name="system_dir" value="${GOBO}/library/${library}/test/unit"/>
	</target>

</project>
