<?xml version="1.0"?>

<system name="xgeant">
	<description>
		system: "Gobo Eiffel Ant Tester"
		copyright: "Copyright (c) 2002-2008, Sven Ehrke and others"
		license: "MIT License"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<root class="XGEANT" creation="make"/>
	<option name="console_application" value="true"/>
	<option unless="${DEBUG}">
		<option name="assertion" value="none"/>
		<option name="garbage_collector" value="none"/>
		<option name="finalize" value="true"/>
	</option>
	<option if="${DEBUG}">
		<option name="assertion" value="all"/>
		<option name="garbage_collector" value="internal"/>
		<option name="finalize" value="false"/>
	</option>
	<option if="${GOBO_DOTNET}">
		<option name="msil_generation" value="true"/>
		<option name="line_generation" value="true"/>
	</option>

	<cluster name="geant_tester" location="${GOBO}/test/src" prefix="src_">
		<option name="abstract" value="true"/>
		<cluster name="geant"/>
		<cluster name="common"/>
	</cluster>
	<cluster name="test_common" location="${GOBO}/test/common"/>
	<cluster name="src_geant_testgen" location="TESTGEN"/>
	<mount location="${GOBO}/src/geant/library.xace" prefix="geant_"/>
	<mount location="${GOBO}/library/library.xace"/>
	<mount location="${GOBO}/library/kernel.xace"/>
</system>
