include ../MakeVars

all: adm

adm:
	$(IDIRCMD) $(SRCDIR)/tmp
	./setup_minimal_support $(SRCDIR)/tmp

install:
	$(IDIRCMD) $(eiflib)
	./setup_minimal_support $(eiflib)
	$(IDIRCMD) $(prefix)/bin
	$(ISCRIPTCMD) build_ace $(prefix)/bin

uninstall:
	rm -rf (eiflib)/minimal_support
	rm -f $(prefix)/bin/build_ace


clean:
	rm -fr $(SRCDIR)/tmp/minimal_support



