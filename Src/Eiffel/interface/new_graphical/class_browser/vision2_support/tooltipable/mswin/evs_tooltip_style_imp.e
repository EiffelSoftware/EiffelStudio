class
	EVS_TOOLTIP_STYLE_IMP

inherit
	EV_SHARED_APPLICATION

feature -- Access

	tooltip_background_color: EV_COLOR is
			-- Background color for tooltips		
		local
			l_retriever: EVS_THEME_DRAWER_RETRIEVER
			l_pointer: POINTER
		do
			create l_retriever
			Result := l_retriever.theme_drawer.theme_color (l_pointer, stock_colors.color_infobk)
		end

feature{NONE} -- Implementation

	stock_colors: WEL_COLOR_CONSTANTS is
			-- Stock colors
		once
			create Result
		ensure
			result_attached: Result /= Void
		end

