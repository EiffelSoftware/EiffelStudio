	description	: "Main window of this application."
	status		: "Generated by the New WEL Application Wizard."
	date		: "<FL_DATE>"
	revision	: "1.0.0"

class
	MAIN_WINDOW

inherit
	WEL_FRAME_WINDOW
		redefine
			class_icon,
			class_background,
			on_menu_command
		end

	APPLICATION_IDS
		export
			{NONE} all
		end

	WEL_COLOR_CONSTANTS

creation
	make

feature -- Initialization

	make is
			-- Make the main window
		do
			make_top (Window_title)
			set_menu (Window_menu)
		end

feature {NONE} -- Implementation

	on_menu_command (menu_id: INTEGER) is
		do
			inspect	menu_id
			when Cmd_file_exit then
				if closeable then
					destroy
				end
			when Cmd_file_new then
				-- Handle File / New here.
			when Cmd_file_open then
				-- Handle File / Open here.
			when Cmd_file_close then
				-- Handle File / Close here.
			when Cmd_help_about then
				-- Handle Help / About here.
			else
				Precursor (menu_id)
			end
		end

feature {NONE} -- Constants

	Window_title: STRING is "<FL_PROJECT_NAME>"
			-- Window's title

	Window_menu: WEL_MENU is
			-- Menu for this window.
		once
			create Result.make_by_id (Idm_mainframe)
		end

	Class_background: WEL_BRUSH is
			-- White background
		once
			create Result.make_by_sys_color (Color_btnface + 1)
		end

	Class_icon: WEL_ICON is
			-- Window's icon
		once
			create Result.make_by_id (Idr_mainframe)
		end

	Gui_font: WEL_DEFAULT_GUI_FONT is
			-- Default font used to draw items (labels, buttons, ...).
		once
			create Result.make
		end

end -- class MAIN_WINDOW
