note
	description: "[
			Implementation of ERROR_PRINTER that uses a XS_SHARED_SERVER_OUTPUTTER to print.
	]"
	legal: "See notice at end of class."
	status: "Community Preview 1.0"
	date: "$Date$"
	revision: "$Revision$"

class
	XU_ERROR_PRINTER

inherit
	ERROR_PRINTER
		redefine
			print_warning
		end

	XU_SHARED_OUTPUTTER
		rename
			print as outputter_print
		select
			outputter_print
		end


feature -- Basic Operations

	print_error (a_error: ERROR_ERROR_INFO)
			-- <Precursor>.
		do
			log.eprint (a_error.description, a_error.generating_type)
		end

	print_warning (a_warning: ERROR_WARNING_INFO)
			-- <Precursor>.
		do
			log.iprint ("Warning: " + a_warning.description)
		end

